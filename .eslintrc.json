{
  "parser": "babel-eslint",
  "extends": ["eslint-config-airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "comma-dangle": 0,
    "func-names": 0,
    "prefer-const": 0,
    "arrow-body-style": 0,
    "no-param-reassign": 0,
    "no-return-assign": 0,
    "max-len": 0,
    "consistent-return": 0,
    "indent": [2, 4, {
      "VariableDeclarator": 2,
      "SwitchCase": 1
    }],
    "key-spacing": [2, {
      "singleLine": {
          "beforeColon": false,
          "afterColon": true
      },
      "multiLine": {
          "beforeColon": false,
          "afterColon": true,
          "align": "colon"
      }
    }],
    "no-underscore-dangle": [2, { "allowAfterThis": true }],
    "computed-property-spacing": [2, "always"],
    "array-bracket-spacing": [2, "always"],
    "semi": [2, "never"],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true
    }],
    "no-confusing-arrow": [2, {"allowParens": true}]
  }
}