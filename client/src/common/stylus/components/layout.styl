@import "../variable"
.app-wrapper
  position: relative
  min-height: 100%
  font-size: 0.14rem
  height: 100%
  .app-wrapper-left
    width: 1.3rem
    height: 100%
    border-right: 1px solid $color-border
    position: fixed
    z-index: 100
    background-color: #fff
    left: 0
    top: 0
    bottom: 0
    .logo-wrapper
      position: absolute
      top: 0
      left: 0
      height: 0.64rem
      width: 0.64rem
      padding: 0.33rem
      text-align: center
      font-weight: 700
      font-size: 0
      img
        width: 100%
        height: 100%
        border-radius: 0.05rem
    .logo-title
      height: 0.5rem
      line-height: 0.5rem
      text-align: center
      position: absolute
      bottom: 0
      width: 100%
      color: #a1b2b4
      font-weight: 700
      font-size: 0.14rem
  .app-wrapper-right
    margin-left: 1.3rem
    height: 100%
    min-height: 100%
    .content-wrapper
      margin: 0 auto
      width: 80%
      max-width: 14.4rem
      min-width: 9rem
      min-height: 100%
      margin-bottom: 1rem
      &.home
        height: 100%
        margin-bottom: -0.51rem
        width: 100%
      .content-wrapper-title
        margin-right: 1.5%
        margin-left: 1.5%
        letter-spacing: 2px
        font-size: 0.55rem
        padding-top: 1rem
        color: $color-text-title
      .content-wrapper-desc
        margin: 1.5%
        padding-top: 0.1rem
        font-size: 0.15rem
        color: $color-text-body
      .content-wrapper-line
        width: 80%
        height: 1px
        background-color: rgba(0,0,0,0.5)
        margin-right: 1.5%
