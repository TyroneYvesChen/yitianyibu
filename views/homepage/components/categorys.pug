mixin categorys(data)
    each item,index in data
        .category-item
            a(href=`/category/${item._id}`).bm-panel.shadow
                .category-item-cover(style=`background-image: url(${'/images/homepage/default/poster/small/' + String(item._id)[23] + '.jpg'})`)
                    .category-item-header
                        .category-item-header-box
                            span= item.name
                .category-item-info.text-shadow
                    time= locals.viewHelper.dateFormat(item.createdAt, 'yyyy-MM-dd')
                    if item.postsCount !== 0
                        span.pull-right= `${item.postsCount}ç¯‡`
