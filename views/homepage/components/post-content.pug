mixin post-content(data)
    .bm-panel.post-content.shadow.text-shadow
        .bm-panel-title
            .post-header
                h1.post-title.theme-font-title-color= data.title
                .post-meta.theme-help-text-color
                    span.post-time= `发表于 ${locals.viewHelper.dateFormat(data.createdAt, 'yyyy-MM-dd')}`
                    span.baffle |
                    span= `${data.hits} 次浏览`
                    span.baffle |
                    if (data.commentsCount)
                        span= `${data.commentsCount} 条评论`
                        span.baffle |
                    if data.tag.length > 0
                        span.post-category
                            | 所属于 
                            each item in data.tag
                                span= item.name
        .bm-panel-content
            .post-body.theme-font-text-color!= data.html
                
        .bm-panel-bar
            .post-tags
                a.post-tag(href=`/category/${data.categoryPathname || data.categoryId}`)= data.category
            .post-like
                span.heart#heart


