mixin top-nav()
    .top-nav
        .top-nav-container.bm-panel.clearfix
            a(href='/').top-nav-logo
                +icon-svg-yi(32, 32, '#5b6064')
                +icon-svg-tian(32, 32, '#5b6064')
                +icon-svg-yi(32, 32, '#5b6064')
